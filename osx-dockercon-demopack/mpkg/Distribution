    /* js:pkmk:start */
    function restartRequiredString() {
      try {
        result = system.run('/bin/sh', '-c', '/bin/cat /usr/libexec/SmartCardServices/drivers/ifd-ccid.bundle/Contents/Info.plist | grep "Yubikey 4"');
      } catch (e) {
        system.log(e);
      }
      system.log("result=" + result);
      return result !== 0 ? 'RequireRestart' : 'None';
    }
    /* js:pkmk:end */
    ]]>
    </script>
